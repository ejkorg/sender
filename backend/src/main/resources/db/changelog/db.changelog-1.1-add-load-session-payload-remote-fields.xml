<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2025-09-27-1" author="copilot">
    <validCheckSum>ANY</validCheckSum>
    <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="load_session_payload" />
                <not>
                    <columnExists tableName="load_session_payload" columnName="external_id" />
                </not>
            </and>
        </preConditions>
        <addColumn tableName="load_session_payload">
            <column name="external_id" type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="2025-09-27-1b" author="copilot">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="load_session_payload" />
                <not>
                    <columnExists tableName="load_session_payload" columnName="pushed_at" />
                </not>
            </and>
        </preConditions>
        <addColumn tableName="load_session_payload">
            <column name="pushed_at" type="timestamp with time zone"/>
        </addColumn>
    </changeSet>

    <changeSet id="2025-09-27-1c" author="copilot">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="load_session_payload" />
                <not>
                    <columnExists tableName="load_session_payload" columnName="attempts" />
                </not>
            </and>
        </preConditions>
        <addColumn tableName="load_session_payload">
            <column name="attempts" type="integer" defaultValueNumeric="0"/>
        </addColumn>
    </changeSet>

    <changeSet id="2025-09-27-2" author="copilot">
    <validCheckSum>ANY</validCheckSum>
    <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="load_session_payload" />
                <not>
                    <indexExists indexName="idx_load_session_payload_session_status" tableName="load_session_payload" />
                </not>
            </and>
        </preConditions>
        <createIndex tableName="load_session_payload" indexName="idx_load_session_payload_session_status">
            <column name="session_id"/>
            <column name="status"/>
        </createIndex>
    </changeSet>

    <!-- Include the dedupe + unique constraint changelog -->
    <include file="db.changelog-2.0-add-unique-session-payload.xml" relativeToChangelogFile="true" />

</databaseChangeLog>
